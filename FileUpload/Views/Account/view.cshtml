@using FileUploadOperation.Models
@model FileUploadOperation.Models.Register




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/RegisterPage.css" />

    <style>

    </style>
</head>
<body style="color:dodgerblue">
    <div class="container">
        <h2 class="mb-4">Registration Form</h2>
        <form id="registrationForm" action="/Account/RegistrationPage" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" readonly disabled value="@Model.Name" class="form-control">
                <div id="nameError" class="invalid-feedback"></div>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" readonly disabled value="@Model.Email" class="form-control">
                <div id="emailError" class="invalid-feedback"></div>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="text" id="password" name="password" readonly disabled value="@Model.Password" class="form-control">
                <div id="passwordError" class="invalid-feedback"></div>
            </div>

            @* <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="text" id="confirmPassword" name="confirmPassword" disabled value="@Model.ConfirmPassword" class="form-control">
                <div id="confirmPasswordError" class="invalid-feedback"></div>
            </div> *@

            
        </form>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/js/site.js">
    </script>

</body>
</html>



