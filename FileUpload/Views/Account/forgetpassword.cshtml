<form action="@Url.Action("forgetpassword", "Account")" method="post">   
    <div class="container">
    <h3>forget password </h3>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control">
                <div id="emailError" class="invalid-feedback"></div>
                <span id="emailErrorIcon" class="material-icons material-icons-outlined Iconcolor" style="display:none">error_outline</span>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control">
                <div id="passwordError" class="invalid-feedback"></div>
                <span id="passwordErrorIcon" class="material-icons material-icons-outlined Iconcolor" style="display:none">error_outline</span>

            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                <div id="confirmPasswordError" class="invalid-feedback"></div>
                <span id="confirmPasswordErrorIcon" class="material-icons material-icons-outlined Iconcolor" style="display:none">error_outline</span>

            </div>

            <button type="submit" class="btn btn-primary btn-block" id="btnReister">submit</button>
    </div>
 </form>