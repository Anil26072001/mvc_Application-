@using FileUploadOperation.Models
@model FileUploadOperation.Models.TourBooking

@* @model List<FileUploadOperation.Models.TourBooking> *@







<!DOCTYPE html>
<html>
<head>
    <title>Tour Booking Application Form</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


    <link rel="stylesheet" href="~/css/book.css" />

</head>
<body>
    <div class="testbox">

        <div class="banner">
            <h1>Tour Booking Application Form</h1>
        </div>
        <div class="item">
            <label for="enterName">Enter Name <span class="required">*</span></label>
            @*  <p>EnterName</p> *@
            <div class="name-item">
                <input type="text" id="FirstName" name="name" placeholder="Firstname" readonly disabled="disabled" value="@Model.FirstName" />
                <span id="FirstnameError" class="invalid-feedback"></span>
                <span id="FirstnameErrorIcons" class="material-icons material-icons-outlined Iconcolor">error_outline</span>

                <input type="text" id="lastname" name="name" placeholder="Lastname" readonly disabled="disabled" value="@Model.LastName" />
                <span id="lastnameError" class="invalid-feedback"></span>
                <span id="LastnameErrorIcons" class="material-icons material-icons-outlined Iconcolor">error_outline</span>

            </div>
        </div>

        <div class="item">
            <label for="email">Email <span class="required">*</span> </label>
            @* <p>Email</p> *@
            <input type="email" id="email" name="email" placeholder="email" readonly disabled="disabled" value="@Model.Email" />
            <span id="emailError" class="invalid-feedback"></span>
            <span id="emailErrorIcons" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
        </div>
        <div class="item">

            <label for="PhoneNumber">PhoneNumber <span class="required">*</span></label>
            @* <p>PhoneNumber</p> *@
            <input type="text" id="phonenum" name="phone" placeholder="123456789" readonly disabled="disabled" value="@Model.Phone" />
            <span id="phoneNumberError" class="invalid-feedback"></span>
            <span id="phoneNumberErrorIcon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
        </div>

        <div class="item col-sm-12">
            <div class="country-item">
                <p>Country:</p>
                <select name="countryDropdown" id="country" class="form-control" >
                    
                    <span id="countryError" class="invalid-feedback"></span>
                    <span id="CountryErrorIcon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>

                    <option value="">@ViewBag.countryName</option>
                   
                </select>
            </div>
        </div>

        <div class="item col-sm-12">
            <span id="CityError" class="invalid-feedback" ></span>
            <div class="city-item">
                <p>City:</p>
                <select id="CityDropdown" class="form-control" >
                    <option value="">@ViewBag.cityName </option>
                </select>
                </<div>
                </div>
                <br />

                <div class="item">
                    <p>When are you planning to visit?</p>
                    <input type="date" name="bdate" id="Date" required readonly disabled="disabled" value="@Model.TimeofIncident" />
                    <span id="dateerror" class="invalid-feedback"></span>
                    @* <span id="dateerror" class="material-icons material-icons-outlined Iconcolor">error_outline</span> *@

                </div>

                <div class="item">
                    <p>How many people are in your group?</p>
                    <input type="text" id="howmanypeople" name="language" readonly disabled="disabled" value="@Model.Howmanypeople" />
                    <span id="howmanypeopleError" class="invalid-feedback"></span>
                    <span id="howmanypeopleErroricon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>



                <div class="item">
                    <p>Which tours or events are you most interested in?</p>
                    <input type="text" id="whichtoursorevents" name="language" readonly disabled="disabled" value="@Model.Whichtoursorevents" />
                    <span id="Whichtoursoreventserror" class="invalid-feedback"></span>
                    <span id="Whichtoursoreventserroricon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>



                </div>

                <div class="question">
                    <p>What is the best way to contact you?</p>

                    <div class="status-item">    </div>
                        @if (Model.bestwaytocontact == "Phone")
                        {
                        <input type="checkbox" value="none" id="phonecheckbox" disabled="disabled" readonly checked name="contact1" value="@Model.bestwaytocontact" />
                        <label for="checkbox_1" class="checkbox"><span>Phone</span> </label>

                        <input type="checkbox" value="none" id="emailcheckbox" disabled="disabled" readonly name="contact2" value="@Model.bestwaytocontact" />
                        <label for="checkbox_2" class="checkbox"><span>Email</span></label>

                        <input type="checkbox" value="none" id="eithercheckbox" disabled="disabled" readonly name="contact3" value="@Model.bestwaytocontact" />
                        <label for="checkbox_3" class="checkbox"><span>Either</span></label>

                        }
                        else if (Model.bestwaytocontact == "Email")
                        {
                        <input type="checkbox" value="none" id="phonecheckbox" disabled="disabled" readonly name="contact1" value="@Model.bestwaytocontact" />
                        <label for="checkbox_1" class="checkbox"><span>Phone</span> </label>

                        <input type="checkbox" value="none" id="emailcheckbox" disabled="disabled" readonly checked name="contact2" value="@Model.bestwaytocontact" />
                        <label for="checkbox_2" class="checkbox"><span>Email</span></label>

                        <input type="checkbox" value="none" id="eithercheckbox" disabled="disabled" readonly name="contact3" value="@Model.bestwaytocontact" />
                        <label for="checkbox_3" class="checkbox"><span>Either</span></label>

                        }
                        else
                        {
                        <input type="checkbox" value="none" id="eithercheckbox" disabled="disabled" checked name="contact3" value="@Model.bestwaytocontact" />
                        <label for="checkbox_3" class="checkbox"><span>Either</span></label>
                 
                        }
                    @*  <span id="status" class="invalid-feedback"></span> *@
                    <div id="statuserror"></div>
                </div>
                    


                <div class="question">
                    <p>If phone, when is the best time of day for a call-back?</p>
                    <div class="statusradio">
                        @if (Model.besttimeofday == "8-11 Am")
                        {
                            <input type="radio" value="8-11 AM" id="eightradio" name="time" disabled="disabled" readonly checked @(Model.besttimeofday == "8-11 Am" ? "checked" : "") />
                            <label for="eightradio" class="radio"><span>8-11 Am</span></label>

                            <input type="radio" value="12-4 PM" id="twlradio" readonly disabled="disabled" name="time" @(Model.besttimeofday == "12-4 PM" ? "checked" : "") />
                            <label for="twlradio" class="radio"><span>12-4 Pm</span></label>

                            <input type="radio" value="6-10 PM" id="sixradio" readonly disabled="disabled" name="time" @(Model.besttimeofday == "6-10 PM" ? "checked" : "") />
                            <label for="sixradio" class="radio"><span>6-10 PM</span></label>
                        }

                        else if (Model.besttimeofday == "12-4 Pm")
                        {
                            <input type="radio" value="8-11 AM" id="eightradio" readonly disabled="disabled" name="time" />
                            <label for="eightradio" class="radio"><span>8-11 AM</span></label>

                            <input type="radio" value="12-4 PM" id="twlradio" checked readonly disabled="disabled" name="time" @(Model.besttimeofday == "12-4 PM" ? "checked" : "") />
                            <label for="twlradio" class="radio"><span>12-4 PM</span></label>

                            <input type="radio" value="6-10 PM" id="sixradio" readonly disabled="disabled" name="time" @(Model.besttimeofday == "6-10 PM" ? "checked" : "") />
                            <label for="sixradio" class="radio"><span>6-10 PM</span></label>
                        }
                        else
                        {
                            <input type="radio" value="8-11 AM" id="eightradio" readonly disabled="disabled" name="time" />
                            <label for="eightradio" class="radio"><span>8-11 AM</span></label>

                            <input type="radio" value="12-4 PM" id="twlradio" readonly disabled="disabled" name="time" />
                            <label for="twlradio" class="radio"><span>12-4 PM</span></label>

                            <input type="radio" value="6-10 PM" id="sixradio" readonly checked disabled="disabled" name="time" />
                            <label for="sixradio" class="radio"><span>6-10 PM</span></label>
                        }


                    </div>
                </div>

         
                  <div id="statuserrorradio"></div>
                    
                 </div>

            @*   <div>

            <input type="radio" value="none" id="eightradio" name="time" />
            <label for="radio_4" class="radio"><span>8-11 AM</span></label>
            <input type="radio" value="none" id="twlradio" name="time" />
            <label for="radio_5" class="radio"><span>12-4 PM</span></label>
            <input type="radio" value="none" id="sixradio" ," name="time" />
            <label for="radio_6" class="radio"><span>6-10 PM</span></label>
            </div> *@




                <div class="item">
                    <p>Anything else we should know?</p>
                <textarea rows="3" disabled="disabled" readonly id="anythingElse"> @Model.AnythingElse </textarea>

                    <div class="item">
                        <p>And last, how did you hear about us?</p>
                    <textarea rows="3" disabled="disabled" readonly id="howDidYouHear"> @Model.HowDidYouHear </textarea>


                    </div>

                   @*  <div class="btn-block">
                        <button type="submit" id="submit" href="/">Save</button>
                    </div> *@

                </div>

                <script src="~/js/book.js"></script>
</body>
</html>